<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/label_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" tools:text="Days Without Incidents"
            android:textAllCaps="false" android:fontFamily="sans-serif-black" android:gravity="center"
            android:text="@string/days_without_incidents"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_settings" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/materialCardView"/>
    <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp" app:contentPadding="16dp"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="4dp"
            android:id="@+id/materialCardView"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/label_title"
            app:layout_constraintStart_toStartOf="@+id/label_title" app:layout_constraintEnd_toEndOf="@+id/label_title"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/btn_reset">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/field_dwi"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:fontFamily="sans-serif-condensed-light"
                tools:text="30 days" android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>
    <Button
            android:text="@string/btn_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" app:strokeColor="@color/colorAccent"
            app:strokeWidth="1dp"
            android:contentDescription="@string/btn_reset"
            android:textColor="@color/colorAccent" app:rippleColor="@color/colorAccent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/materialCardView" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="@+id/materialCardView"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_more_vert"
            android:id="@+id/btn_settings"
            android:background="?attr/selectableItemBackgroundBorderless" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="1.0"
            android:tint="@color/colorPrimary" android:contentDescription="@string/title_activity_settings"/>
</androidx.constraintlayout.widget.ConstraintLayout>